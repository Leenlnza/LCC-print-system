app.post('/api/orders', upload.fields([{name:'file'},{name:'slip'}]), async (req,res) => {
  // รับข้อมูลคำสั่ง
  // บันทึกลง MongoDB
  res.json({ message: 'สั่งปริ้นเรียบร้อยแล้ว' });
});

app.get('/api/orders', checkAdminAuth, async (req,res) => {
  const orders = await Order.find();
  res.json(orders);
});